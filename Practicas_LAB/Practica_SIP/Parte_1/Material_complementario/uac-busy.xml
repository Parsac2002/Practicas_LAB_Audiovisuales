<!--                 Sipp 'uac + busy' scenario.                        -->
<!--                                                                    -->

<scenario name="UAC scenario with busy UAS">
  <!-- In client mode (sipp placing calls), the Call-ID MUST be         -->
  <!-- generated by sipp. To do so, use [call_id] keyword.                -->
  <!-- Define the variables (not necessary if we set them -->
  
  <!-- <exec int_cmd='user_UAC="user1"'/>
  <exec int_cmd='user_UAS="user2"'/> -->
  
  <!-- Command : sipp -sf uac-busy.xml -set user_UAC 100451824 -->

  <send retrans="500">
    <![CDATA[

      INVITE sip:[service]@[remote_ip]:[remote_port] SIP/2.0
      Via: SIP/2.0/UDP [local_ip]:[local_port] 
      From: 100451824<sip:100451824@[local_ip]:[local_port]>
      To: [service]  <sip:[service]@[remote_ip]:[remote_port]>
      Call-ID: [call_id]
      CSeq: [cseq] INVITE 
      Contact: sip:100451824@[local_ip]:[local_port]
      Max-Forwards: 70
      Subject: UAC with busy UAS
      Content-Type: application/sdp
      Content-Length: [len]

      v=0
      o=user1 2353687637 2353687637 IN IP[local_ip_type] [local_ip]
      s=-
      c=IN IP[media_ip_type] [media_ip]
      t=0 0
      m=audio [media_port] RTP/AVP 0
      a=rtpmap:0 PCMU/8000

    ]]>
  </send>

  <recv response="100"
        optional="true">
  </recv>

  <recv response="180" optional="true" rrs="true">
  </recv>

  <!-- By adding rrs="true" (Record Route Sets), the route sets         -->
  <!-- are saved and used for following messages sent. Useful to test   -->
  <!-- against stateful SIP proxies/B2BUAs.                             -->
  <recv response="486" rtd="true" rrs="true">
  </recv>

  <!-- Packet lost can be simulated in any send/recv message by         -->
  <!-- by adding the 'lost = "10"'. Value can be [1-100] percent.       -->
  <!-- Paquete de respuesta al BUSY HERE-->
  <send>
    <![CDATA[

      ACK [next_url] SIP/2.0
      Via: SIP/2.0/UDP [local_ip]:[local_port]
      From: 100451824<sip:100451824@[local_ip]:[local_port]>
      To: [service]  <sip:[service]@[remote_ip]:[remote_port]>
      Call-ID: [call_id]
      CSeq: [cseq] ACK
      Contact: <sip:100451824[local_ip]:[local_port]>
      Max-Forwards: 70
      Subject: UAC with busy UAS
      Content-Length: 0

    ]]>
  </send>


  <!-- definition of the response time repartition table (unit is ms)   -->
  <ResponseTimeRepartition value="10, 20, 30, 40, 50, 100, 150, 200"/>

  <!-- definition of the call length repartition table (unit is ms)     -->
  <CallLengthRepartition value="10, 50, 100, 500, 1000, 5000, 10000"/>

</scenario>
